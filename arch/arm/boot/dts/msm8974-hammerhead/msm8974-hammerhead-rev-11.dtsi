/include/ "msm8974-hammerhead.dtsi"

&soc {
	i2c@f9924000 {
		synaptics_s3350@70 {
			status = "ok";
			synaptics,type = <1>;
		};
	};

	vibrator {
		vdd-supply = <&pm8941_l19>;
		use-vdd-supply;
	};

	qcom,mdss_dsi_jdi_command_ors {
		status = "ok";
		qcom,cont-splash-enabled;
	};

	gpio_keys {
		cover-switch {
			label = "cover-switch";
			gpios = <&msmgpio 144 0x01>;
			linux,input-type = <5>;
			linux,code = <0>;
			gpio-key,wakeup;
			debounce-interval = <15>;
		};
	};
};
